<LATTICES>
  
  <UNITCELL name="simple2d" dimension="2" vertices="1">
    <VERTEX/>
  </UNITCELL>
  
  <LATTICE name="Betts2D-4A superlattice" dimension="2">
    <BASIS>
      <VECTOR>2 0 </VECTOR>
      <VECTOR>0 2 </VECTOR>
    </BASIS>
    <RECIPROCALBASIS>
      <VECTOR>4*pi/4 0*pi/4 </VECTOR>
      <VECTOR>0*pi/4 4*pi/4 </VECTOR>
    </RECIPROCALBASIS>
  </LATTICE>
  
  <LATTICEGRAPH name = "Betts2D-4A">
    <FINITELATTICE>
      <LATTICE ref="Betts2D-4A superlattice"/>
      <PARAMETER name="L" default="30"/>
      <EXTENT dimension="1" size="L"/>
      <EXTENT dimension="2" size="L"/>
      <BOUNDARY type="periodic"/>
    </FINITELATTICE>
    <UNITCELL ref="simple2d"/>
  </LATTICEGRAPH>
 </LATTICES> 
